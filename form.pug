doctype html 
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="style.css")
        title Form
    body 
        container 
            h1 Simpl&#600 form
            img(src="./img/weakdoge.png", alt="", srcset="" class="weakdoge")
            h2 text
            

            
            form(action="index.php" method="post") 
                //- id must much with with label (id="username" to for="username")
                label(for="username") username: 
                input(type="text" id="username" minlength="5" maxlength="10" required placeholder="enter your username here")
                br
                label(for="password") password: 
                input(type="password" id="password" minlength="8" maxlength="20" required placeholder="enter your password here") 
                br
                label(for="email") email: 
                input(type="email" id="email" minlength="8" maxlength="20" required placeholder="yourmail@gmail.com") 
                br
                label(for="phone") tel #: 
                input(type="tel" id="phone" minlength="8" maxlength="15" required placeholder="+38xxxxxxxxxx" pattern="^\\+38\\d{10}$")
                //- HTML input element has the specified pattern ^\+38\d{10}$, ensuring that the phone number starts with "+38" and is followed by exactly 10 digits. 
                br
                label(for="pbday") date of birth: 
                input(type="date" id="bday")
                br
                label(for="height") height: 
                input(type="number" id="height" placeholder="in cm" min="0" max="300" pattern="^[0-9]{3}$")
                br
                label(for="sex" class='sexlabel') Sex:  
                
                     
                    input(type="radio" id='male' value='male' name='sex')
                    label(for="male") Male     
                    
                    input(type="radio" id='Female' value='female' name='sex')
                    label(for="female") Female  

                    input(type="radio" id='Yes' value='yes' name='sex')
                    label(for="Yes") Yes, please
                br 
                br
                input(type="submit")
                br
                hr
                input(type="reset")

        script(src="script.js") 
        